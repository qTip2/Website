block content
	#contentheader
		.center
			#scroller
				.wrapper
				.slide
					| test

			#browsers
				div
					img(src='#{IMAGES_DIR}browsers/64-chrome.png', alt='Chrome')
				| 8+
				div
					img(src='#{IMAGES_DIR}browsers/64-firefox.png', alt='Firefox')
				| 3+
				div
					img(src='#{IMAGES_DIR}browsers/64-ie.png', alt='Internet Explorer')
				| 6+
				div
					img(src='#{IMAGES_DIR}browsers/64-opera.png', alt='Opera')
				| 9+
				div
					img(src='#{IMAGES_DIR}browsers/64-safari.png', alt='Safari')
