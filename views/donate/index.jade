extends ../layouts/default

block content

	#contentheader
		.center.donate
			h2
				span.right Support qTip<sup>2</sup>'s development
				| Make a donation
	
			form#donateform(method='POST')
				// PayPal
				#paypal
					input(type='hidden', name='cmd', value='_donations')
					input(type='hidden', name='business', value='craig@craigsworks.com')
					input(type='hidden', name='item_name', value='qTip2 - Pretty powerful tooltips')
					input(type='hidden', name='no_shipping', value='0')
					input(type='hidden', name='no_note', value='1')
					input(type='hidden', name='currency_code', value='USD')
					input(type='hidden', name='tax', value='0')
					input(type='hidden', name='bn', value='PP-DonationsBF')
				// Moneybookers
				#moneybookers
					input(type='hidden', name='pay_to_email', value='craig@craigsworks.com')
					input(type='hidden', name='status_url', value='#{url("thanks")}')
					input(type='hidden', name='return_url', value='#{url("thanks")}')
					input(type='hidden', name='return_url_text', value='Complete the donation!')
					input(type='hidden', name='language', value='EN')
					input(type='hidden', name='recipient_description', value='qTip2 - Pretty powerful tooltips')
					input(type='hidden', name='dynamic_descriptor', value='qTip2 - Pretty powerful tooltips')
					input(type='hidden', name='detail1_description', value='qTip2 donation')
					input(type='hidden', name='detail2_description', value='Author')
					input(type='hidden', name='detail2_text', value='Craig Michael Thompson')
					input(type='hidden', name='amount2_description', value='Donation:')
					input(type='hidden', name='payment_methods', value='WLT,NGP,IDL,PWY,PWY5,PWY6,PWY7,PWY14,PWY15,PWY37,PWY17,PWY18,PWY19,PWY20,PWY21,PWY22,PWY26,PWY25,PWY28,PWY32,PWY33,PWY36,ACC,VSA,MSC,VSD,VSE,AMX,DIN,JCB,MAE,LSR,SLO,GCB,SFT,DID,GIR,ENT,EBT,SO2,NPY,PLI,DNK,CSI,PSP,EPY,BWI')
					input(type='hidden', name='confirmation_note', value='Thanks for the donation and feel free to visit the support forums at any time!')
					input(type='hidden', name='logo_url', value='#{cdn("logo-horizontal.png")}')
					
				.name
					| Your Name:
					input#donate_name(type='text', name='firstname', maxlength='25', value='Anonymous', rel='true')
					
				.bubble.left
					h4 Choose a currency
					a.type.active(rel='USD')
						span $
						small USD
					a.type(rel='GBP')
						span £
						small GBP
					a.type(rel='EUR')
						span €
						small EUR
				
				img.owl.left(src='#{cdn("donate_owl.png")}', alt='', width='210', height='120')
				
				.bubble
					.custom
						h4 Enter an amount
						.amount
							span(style='margin-top: 7px;') $
							input#donate_amount(type='text', name='amount', value='1', maxlength='7')
						h5
							b Note:
							| PayPal take a 3.4% commision on all donations. Please bear this in mind when donating.
					.clear
					
				button.submit(name='external', value='paypal', type='submit')
					| Send my donation via 
					b PayPal
					
				button.submit(name='external', value='moneybookers', type='submit')
					| Send my donation via 
					b MoneyBookers
					
				div(style='margin: 15px 0 15px; text-align: center;')
					//
					Flattr
					a(href='http://flattr.com/thing/706279/qTip2-Pretty-Powerful-Tooltips', target='_blank', title='Donate using Flattr')
						img.noq(src='http://api.flattr.com/button/flattr-badge-large.png', alt='Flattr this', border='0')
				
				p.note(style='text-align: center;')
					b Note: 
					| All donations are made to 
					a(href='mailto:craig@craigsworks.com') craig@craigsworks.com 
					| in the above services.
					br
					b Note: 
					| Upon submission, you will be redirected to the PayPal/Moneybookers website to login/register and verify your donation.
					br
					b Note: 
					| If you prefer to send money in a currency not listed, alternative currency options are available once at the external site (see above).
			.clear
		
	#content
		.center(style='text-align: justify;')
			h5.right(style='margin-top: 16px;') Random tag cloud
			h2 A Wall of Contributors
			div
				each person in contributors
					- color = Math.floor( Math.random() * 50 ) + 50
					- size = (Math.floor( Math.random() * 70 ) + 100) / 100
					span(style="color:rgb(#{color}, #{color}, #{color}); font-size:#{size}em; line-height:#{size-.15}em;")= person