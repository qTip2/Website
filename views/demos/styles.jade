						span.ui-tooltip-titlebar
						span.ui-tooltip-content
				li
					a.ui-tooltip.ui-tooltip-rounded.ui-tooltip-green(title='Green', description='Mellow green style. Great for success messages!')
						span.ui-tooltip-titlebar
						span.ui-tooltip-content
				li
					a.ui-tooltip.ui-tooltip-rounded.ui-tooltip-red(title='Red', description='Assertive red style, a must for error messages.')
						span.ui-tooltip-titlebar
						span.ui-tooltip-content
				li
					a.ui-tooltip.ui-tooltip-rounded.ui-tooltip-cream(title='Cream', description='The old \'cream\' style from qTip 1.0...more golden!')
						span.ui-tooltip-titlebar
						span.ui-tooltip-content
				li
					a.ui-tooltip.ui-tooltip-rounded.ui-tooltip-dark(title='Dark', description='Sleek dark style for your darker designs.')
						span.ui-tooltip-titlebar
						span.ui-tooltip-content
				li
					a.ui-tooltip.ui-tooltip-rounded.ui-tooltip-light(title='Light', description='Basic light style, good for pretty much anything!')
						span.ui-tooltip-titlebar
						span.ui-tooltip-content
			ul
				li
					a.ui-tooltip.ui-tooltip-youtube(title='Youtube', description='Youtube-style tooltips for your page.')
						span.ui-tooltip-titlebar
						span.ui-tooltip-content
				li
					a.ui-tooltip.ui-tooltip-bootstrap(title='Bootstrap', description='Twitter Bootstrap style')
						span.ui-tooltip-titlebar
						span.ui-tooltip-content
				li
					a.ui-tooltip.ui-tooltip-tipsy(title='Tipsy', description='Great Tipsy style, as seen on GitHub')
						span.ui-tooltip-titlebar
						span.ui-tooltip-content
				li
					a.ui-tooltip.ui-tooltip-tipped(title='Tipped', description='Cloned style from Strakenburg\'s Tipped plugin')
						span.ui-tooltip-titlebar
						span.ui-tooltip-content
				li
					a.ui-tooltip.ui-tooltip-cluetip(title='Cluetip', description='The ever famous ClueTip comes to qTip in style!')
						span.ui-tooltip-titlebar
						span.ui-tooltip-content
				li.wide
					a.ui-tooltip.ui-tooltip-jtools(title='jTools', description='Sleek jTools style with fancy CSS3 shadow!')
						span.ui-tooltip-titlebar
						span.ui-tooltip-content
			.clear

		#options.banner
			input#shadow(type='checkbox')
			label(for='shadow') Drop shadow
			input#rounded(type='checkbox')
			label(for='rounded') Rounded corners
		.clear

		#code.contain
			.padder
				textarea

		#result
			.banner
			.contain.padder
